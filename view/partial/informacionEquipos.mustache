<tr class="text-center cambiarColorEquipos">
    <th scope="row">{{id}}</th>
    <td scope="col">{{modelo}}</td>
    <td scope="col">{{t_patente}}</td>
    <td scope="col">{{kilometraje}}</td>
    <td scope="col"><a href="/ListaTractor/verTractorPorId/id={{id_tractor}}" class="btn btn-outline-dark"><i class="fas fa-plus"></i></a> </td>
    <td scope="col">{{tipo_acoplado}}</td>
    <td scope="col">{{a_patente}}</td>
    <td scope="col"><a href="/ListaAcoplado/verAcopladoPorId/id={{id_acoplado}}" class="btn btn-outline-dark"><i class="fas fa-plus"></i></a> </td>
    <td scope="col" class="estadoEquipos">{{estado}}</td>
<td>
    {{#valorMecanico}}
        <div style="text-align: center">
            <a data-toggle="modal" data-target="#modificar{{id}}" style="width: 44%" type="button" class="btn btn-secondary" ><i class="fas fa-user-edit"></i></a>
            <a data-toggle="modal" data-target="#inactivar{{id}}" style="width: 44%" type="button" class="btn btn-danger" ><i class="fas fa-trash-alt"></i></a>
        </div>
    {{/valorMecanico}}
</td>
</tr>

<div class="modal fade" id="inactivar{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Estas seguro de querer inactivar el equipo cuya id es {{id}} ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/listaEquipo/eliminarEquipo/id={{id}}&idAcoplado={{id_acoplado}}&idTractor={{id_tractor}}" enctype="multipart/form-data" method="get" >
                <button type="submit" class="btn btn-danger btn-lg btn-block">SI</button>
                <button type="button" data-dismiss="modal" class="btn btn-dark btn-lg btn-block">NO</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modificar{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modificar el equipo cuya id es {{id}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/listaEquipo/modificarEquipo/idAcopladoAnterior={{id_acoplado}}&idTractorAnterior={{id_tractor}}" enctype="multipart/form-data" method="post" >
                        <input type="hidden"  name="id" id="id" value="{{id}}">
                        <div class="form-group">
                            <label for="acoplado">Asignar tipo de acoplado</label>
                            <select id="acoplado" name="acoplado" class="form-control">
                                <option value="{{id_acoplado}}"selected>acoplado: {{tipo_acoplado}}</option>
                                {{#acoplados}}
                                    <option value="{{id}}">Acoplado: {{tipo_acoplado}} - Patente: {{patente}} - Chasis:
                                        {{chasis}}</option>
                                {{/acoplados}}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="tractor">Asignar tipo de tractor</label>
                            <select id="tractor" name="tractor" class="form-control">
                                <option value="{{id_tractor}}">TRACTOR: marca: {{marca}}, modelo: {{modelo}}, número de motor: {{nro_motor}}, kilometraje: {{kilometraje}}</option>
                                {{#tractores}}
                                    <option value="{{id}}">TRACTOR: marca: {{marca}}, modelo: {{modelo}}, número de motor: {{nro_motor}}, kilometraje: {{kilometraje}}</option>
                                {{/tractores}}
                            </select>
                        </div>

                        <button type="submit" class="btn btn-dark btn-lg btn-block">Modificar</button>
                    </form>
            </div>
        </div>
    </div>
</div>



