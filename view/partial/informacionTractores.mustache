<div class="col-md-4 mb-4">
    <div class="card choferes">
        <div class="card-body">
            <h5 class="card-title"> Marca : {{marca}}</h5>
            <div style="text-align: left">
                <p class="card-text">ID: {{id}}</p>
                <p class="card-text" style="float: left" >Modelo: {{modelo}}</p>
                <p class="card-text" style="margin-left: 50%">Patente: {{patente}}</p>
                <p class="card-text">Número de chasis: {{chasis}}</p>
                <p class="card-text">Kilometraje: {{kilometraje}}</p>
                <p class="card-text">Número de motor: {{nro_motor}}</p>

                <div style="text-align: center">
                {{#valorMecanico}}
                    <a data-toggle="modal" data-target="#eliminar{{id}}" type="button" class="btn btn-outline-dark" style="float: right; font-size: 15px;">Eliminar</a>
                    <a data-toggle="modal" data-target="#modificar{{id}}" type="button" class="btn btn-outline-dark" style="float: left;font-size: 15px;" >Modificar</a>
                {{/valorMecanico}}
                    <a data-toggle="modal" data-target="#calendario{{id}}" type="button" class="btn btn-outline-dark ml-1" style="font-size: 15px;" >Calendario</a>
                </div>

            </div>

        </div>
    </div>
</div>



<div class="modal fade" id="eliminar{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Estas seguro de querer eliminar el Tractor cuya id es {{id}} ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/listaTractor/eliminarTractor/id={{id}}" enctype="multipart/form-data" method="get" >
                <button type="submit" class="btn btn-dark btn-lg btn-block">SI</button>
                <button type="button" data-dismiss="modal" class="btn btn-dark btn-lg btn-block">NO</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modificar{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modificar tractor de id :{{id}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/listaTractor/modificarTractor" enctype="multipart/form-data" method="post" >
                    <label for="id">Id del Tractor</label>
                    <textarea class="form-control" style="height: 36px" name="id" id="id" >{{id}}</textarea>

                    <div class="form-group">
                        <label for="tractor">Marca</label>
                        <input type="text" class="form-control" id="marca" name=marca value="{{marca}}"
                                required>
                    </div>

                    <div class="form-group">
                        <label for="tractor">Modelo</label>
                        <input type="text" class="form-control" id="modelo" name=modelo value="{{modelo}}"
                               required>
                    </div>

                    <div class="form-group">
                        <label for="tractor">Número de motor</label>
                        <input type="number" class="form-control" id="nro_motor" name=nro_motor value="{{nro_motor}}"
                               required>
                    </div>

                    <div class="form-group">
                        <label for="tractor">Número de chasis</label>
                        <input type="text" class="form-control" id="chasis" name=chasis value="{{chasis}}"
                               required>
                    </div>

                    <div class="form-group">
                        <label for="tractor">Patente</label>
                        <input type="text" class="form-control" id="patente" name=patente value="{{patente}}"
                               required>
                    </div>

                    <button type="submit" class="btn btn-dark btn-lg btn-block">Modificar</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="calendario{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar calendario a tractor de id :{{id}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/listaTractor/registrarCalendarioTractor" enctype="multipart/form-data" method="post" >
                    <label for="id">Id del Tractor</label>
                    <textarea class="form-control" style="height: 36px" name="id" id="id" >{{id}}</textarea>

                    <div class="form-group">
                        <label for="tractor">Día</label>
                        <input type="date" class="form-control" id="dia" name="dia"
                               required>
                    </div>

                    <div class="form-group">
                        <label for="tractor">Descripcion</label>
                        <input type="text" class="form-control" id="descripcion" name="descripcion" placeholder="Ingresar descripcion.."
                               required>
                    </div>

                    <button type="submit" class="btn btn-dark btn-lg btn-block">Agregar</button>
                </form>
                <form action="/listaTractor/verCalendario">
                <input type="hidden" value="{{id}}" name="id" id="id">
                <button type="submit" class="btn btn-dark btn-lg btn-block mt-3">Ver calendario</button>
                </form>
            </div>
        </div>
    </div>
</div>

