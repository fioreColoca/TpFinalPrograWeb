<tr class="text-center">
    <th scope="row">{{id}}</th>
    <td>{{nombre}}</td>
    <td>{{apellido}}</td>
    <td>{{dni}}</td>
    <td>{{usuario}}</td>
    <td>{{email}}</td>
    <td>{{fecha_nacimiento}}</td>
    <td>{{tipo_licencia}}</td>
    <td>{{rol}}</td>
    <td>
            {{#valorAdmin}}
                <div style="text-align: center">
                    <a data-toggle="modal" data-target="#modificar{{id}}" style="width: 44%" type="button" class="btn btn-secondary" ><i class="fas fa-user-edit"></i></a>
                    <a data-toggle="modal" data-target="#eliminar{{id}}" style="width: 44%" type="button" class="btn btn-danger" ><i class="fas fa-user-minus"></i></a>
                </div>
            {{/valorAdmin}}
    </td>
</tr>
<div class="modal fade" id="modificar{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modificar el rol del usuario: {{usuario}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/usuario/modificarRolUsuario/id={{id}}" style="margin-bottom: 10px" enctype="multipart/form-data" method="post" >
                    <div class="form-group">
                        <label for="rol">Seleccionar el rol que desea asignar</label>
                        <select id="rol" name="rol" class="form-control">
                            <option value="0"selected>rol</option>
                            <option value="admin">Administrador</option>
                            <option value="chofer">Chofer</option>
                            <option value="mecanico">Mecanico</option>
                            <option value="supervisor">Supervisor</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-dark btn-lg btn-block">Asignar Rol</button>
                </form>
                <form action="/usuario/modificarLicenciaUsuario/id={{id}}" enctype="multipart/form-data" method="post" >
                <div class="form-group">
                    <label for="licencia">Seleccionar la licencia</label>
                    <select id="licencia" name="licencia" class="form-control">
                        <option value="0"selected>Tipo de Licencia</option>
                        <option value="A">A - Motovehículos de 2, 3 o 4 ruedas</option>
                        <option value="PA">PA - Profesionales motovehículos de 2, 3 o 4 ruedas</option>
                        <option value="B">B - Automóviles particulares</option>
                        <option value="C">C - Carga</option>
                        <option value="D">D - Transporte de pasajeros</option>
                        <option value="E">E - Camiones y maquinaria especial no agrícola</option>
                        <option value="F">F - Vehículos adaptados</option>
                        <option value="G">G - Vehículos agrícolas</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-dark btn-lg btn-block">Asignar Licencia</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="eliminar{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Estas seguro de querer eliminar a {{nombre}} {{apellido}}?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/usuario/eliminarUsuario/id={{id}}" enctype="multipart/form-data" method="get" >
                <button type="submit" class="btn btn-danger btn-lg btn-block">SI</button>
                <button type="button" data-dismiss="modal" class="btn btn-dark btn-lg btn-block">NO</button>
                </form>
            </div>
        </div>
    </div>
</div>