<div id="errorModal" class="modal" style="display: block" role="dialog">
    <div class="modal-dialog" style="margin-top: 15%">
        <div class="modal-content">
            <div class="modal-header">
                {{#errorUsuario}}
                    <h4 class="modal-title">Usuario No Existe</h4>
                {{/errorUsuario}}
                {{#errorContraseña}}
                    <h4 class="modal-title">Contraseña Incorrecta</h4>
                {{/errorContraseña}}
                {{#errorCuenta}}
                    <h4 class="modal-title">Cuenta No Activa. Debe verificar su cuenta mediante el mail enviado.</h4>
                {{/errorCuenta}}
                {{#usuarioVerificado}}
                    <h4 class="modal-title">El usuario ha sido verificado correctamente</h4>
                {{/usuarioVerificado}}
                {{#mailEnviado}}
                    <h4 class="modal-title">Te hemos enviado un mail para verificar tu cuenta, revisa tu email y presiona el link del mensaje</h4>
                {{/mailEnviado}}
                <button onclick="document.getElementById('errorModal').style.display='none'" type="button"
                        class="close">&times;
                </button>
            </div>
            <div class="modal-footer">
                <button onclick="document.getElementById('errorModal').style.display='none'" type="button"
                        class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">OK
                </button>
            </div>
        </div>
    </div>
</div>