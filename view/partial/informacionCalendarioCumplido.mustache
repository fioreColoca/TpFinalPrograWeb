<tr class="text-center">
    <th scope="row ">{{id}}</th>
    <td>{{fecha}}</td>
    <td>{{id_tractor}}</td>
    {{#valorSupervisor}}
        <td>{{estado}}</td>
    {{/valorSupervisor}}

    {{#valorMecanico}}
        <td>{{estado}}</td>
        <td>
        </td>
        <td>
        </td>

        <td>
                <a data-toggle="modal" data-target="#informacion{{id}}" type="button" class="btn btn-success"><i class="fas fa-question-circle"></i></a>
        </td>
    {{/valorMecanico}}
</tr>

<div class="modal fade" id="eliminar{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Estas seguro de querer eliminar el calendario de servicio del dia {{fecha}} ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/listaTractor/eliminarCalendario/id={{id}}&idTractor={{id_tractor}}" enctype="multipart/form-data" method="get" >
                <button type="submit" class="btn btn-danger btn-lg btn-block">SI</button>
                <button type="button" data-dismiss="modal" class="btn btn-dark btn-lg btn-block">NO</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="informacion{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Datos del servicio del día: {{fecha}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>ID: {{id}}</p>
                <p>TIPO DE SERVICIO: {{tipo_service}}</p>
                <p>RESPUESTOS CAMBIADOS: {{respuestosCambiados}}</p>
                <p>KILOMETRAJE: {{kilometraje}}</p>
                <p>MECANICO: {{mecanico}}</p>
                <p>COSTO: {{costo}}</p>

                <div style="text-align: center" class="mt-3">
                    <hr>
                    <a data-toggle="modal" data-target="#modificarEsto{{id}}" type="button" class="btn btn-secondary">Modificar</a>
                </div>
            </div>

        </div>

    </div>
</div>

<div class="modal fade" id="modificarEsto{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modificar el servicio del día: {{fecha}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/listaTractor/editarServiceCalendario/idTractor={{id_tractor}}" enctype="multipart/form-data" method="POST">
            <div class="form-group">
                <div class="modal-body">
                    <p for="id">ID del Servicio: {{id}}</p>
                    <input type="hidden" value="{{id}}" name="id" id="id">
                    <input type="hidden" value="{{id}}" name="id" id="id">
                    <label for="tipo_servicio" class="mt-3">Tipo de Service</label>
                    <select id="tipo_servicio" name="tipo_servicio" class="form-control mt-3" required>
                        <option value="{{tipo_service}}">{{tipo_service}}</option>
                        <option value="Interno">Interno</option>
                        <option value="Externo">Externo</option>
                    </select>
                    <label for="cambios" class="mt-3">Cambios y arreglos</label>
                    <textarea class="form-control" name="cambios" id="cambios" required>{{respuestosCambiados}}</textarea>
                    <label for="costo" class="mt-3">Ingrese costo</label>
                    <input type="number" class="form-control" id="costo" name="costo" value="{{costo}}" required>
                    <label for="kilometro" class="mt-3">Ingrese kilometros realizados</label>
                    <input type="number" class="form-control" id="kilometraje" name="kilometraje" value="{{kilometraje}}" required>
                    <label for="fecha" name="fecha" id="fecha" class="mt-2">Fecha del control</label>
                    <br>
                    <input type="date" value="{{fecha}}" name="fecha" id="fecha">

                    <button type="submit" class="btn btn-dark btn-lg btn-block mt-3">Enviar</button>

                </div>
            </div>
            </form>
        </div>

    </div>
</div>


