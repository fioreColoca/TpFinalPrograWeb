<div class="col-md-4 mb-4">
    <div class="card choferes">
        <div class="container p-2 pl-3 text-white" style="background: #E6831A">
            <h4 class="card-title"> Tipo de acoplado : {{tipo_acoplado}}</h4>
        </div>
        <div class="container p-3" style="background: #FCDEC3">
            <h5 class="card-text"> ID: {{id}}</h5>
            <h5 class="card-text">Estado: {{estado}}</h5>
            <hr>
            <p class="card-text">Patente: {{patente}}</p>
            <p class="card-text">Chasis: {{chasis}}</p>
            {{#valorMecanico}}
                <hr>
                <div style="text-align: center">
                    <a data-toggle="modal" data-target="#modificar{{id}}" type="button" class="btn btn-secondary" >Modificar</a>
                    <a data-toggle="modal" data-target="#eliminar{{id}}" type="button" class="btn btn-danger">Eliminar</a>
                </div>
            {{/valorMecanico}}
        </div>
    </div>
</div>



<div class="modal fade" id="eliminar{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Estas seguro de querer eliminar el acoplado de tipo {{tipo_acoplado}} con id {{id}}?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/listaAcoplado/eliminarAcoplado/id={{id}}" enctype="multipart/form-data" method="get" >
                <button type="submit" class="btn btn-danger btn-lg btn-block">SI</button>
                <button type="button" data-dismiss="modal" class="btn btn-dark btn-lg btn-block">NO</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modificar{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modificar equipo de patente: {{patente}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/ListaAcoplado/modificarAcoplado" enctype="multipart/form-data" method="post" >
                    <p for="id">ID del acoplado: {{id}}</p>
                    <input type="hidden" name="id" id="id" value="{{id}}">


                    <div class="form-group">
                        <label for="tractor">Tipo de acoplado</label>
                        <input type="text" class="form-control" id="tipo" name=tipo value="{{tipo_acoplado}}"
                               required>
                    </div>


                    <div class="form-group">
                        <label for="tractor">Patente</label>
                        <input type="text" class="form-control" id="patente" name=patente value="{{patente}}"
                               required>
                    </div>


                    <div class="form-group">
                        <label for="tractor">Número de chasis</label>
                        <input type="number" class="form-control" id="chasis" name=chasis value="{{chasis}}"
                               required>
                    </div>

                    <button type="submit" class="btn btn-dark btn-lg btn-block">Modificar</button>
                </form>
            </div>
        </div>
    </div>
</div>



